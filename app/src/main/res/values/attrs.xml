<resources>
    <!-- Used to indicate that a theme is a dark theme. -->
    <attr name="isDarkTheme"   format="boolean" />
    <!-- Used as the background color for recycler view items. -->
    <attr name="recyclerViewItemColor"  format="color" />
    <!-- Used as the background color of an item selected in a RecyclerView. -->
    <attr name="colorSelected" format="color" />
    <!-- A text color. Used in some places instead of @android.attr.textColor
         due to dev.sasikanth.colorsheet.ColorSheet picking its background
         color based on the android attribute. -->
    <attr name="textColor"     format="color" />
    <!-- The width of the canvas a path is drawn on. -->
    <attr name="pathWidth"     format="float" />
    <!-- The height of the canvas a path is drawn  on. -->
    <attr name="pathHeight"    format="float" />

    <declare-styleable name="BottomAppBar">
        <!-- Where the cradle is drawn on the BottomAppBar. -->
        <attr name="cradleAlignmentMode" format="enum" >
            <enum name="start"  value="0" />
            <enum name="center" value="1" />
            <enum name="end"    value="2" />
        </attr>
        <!-- The depth of the BottomAppBar cradle. -->
        <attr name="cradleDepth"              format="dimension" />
        <!-- The radius of the cradle curved top corners. -->
        <attr name="cradleTopCornerRadius"    format="dimension" />
        <!-- The radius of the cradle curved bottom corners. -->
        <attr name="cradleBottomCornerRadius" format="dimension" />
        <!-- The margin from the start or end of the BottomAppBar to the cradle. -->
        <attr name="cradleStartEndMargin"     format="dimension" />
        <!-- The margin in between the cradle and the cradle layout contents. -->
        <attr name="cradleContentsMargin"     format="dimension" />
        <!-- The width of the top border. -->
        <attr name="topBorderWidth"           format="dimension" />
        <!-- The id of the contained cradle layout. -->
        <attr name="cradleLayoutResId"        format="reference" />
    </declare-styleable>

    <declare-styleable name="BottomAppBarWithIndicator">
        <!-- The initial width of the indicator. -->
        <attr name="indicatorWidth"     format="dimension" />
        <!-- The initial color of the indicator. -->
        <attr name="indicatorColor"     format="color" />
        <!-- The id of the BottomNavigationView whose menu items the indicator will track. -->
        <attr name="navigationBarResId" format="reference" />
    </declare-styleable>

    <declare-styleable name="TextFieldEdit">
        <!-- Whether the TextFieldEdit will start in an editable state. -->
        <attr name="isEditable" format="boolean" />
        <!-- Whether the text field can be blank. -->
        <attr name="canBeBlank" format="boolean" />
    </declare-styleable>

    <declare-styleable name="IntegerEdit">
        <!-- The initial value of the IntegerEdit. -->
        <attr name="initialValue" format="integer" />
        <!-- The minimum value the IntegerEdit can hold. -->
        <attr name="minValue"     format="integer" />
        <!-- The maximum value the IntegerEdit can hold. -->
        <attr name="maxValue"     format="integer" />
        <!-- The step size of the increment and decrement buttons. -->
        <attr name="stepSize"     format="integer" />
        <!-- Whether the user is able to directly input the value. -->
        <attr name="valueIsFocusable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RecyclerViewActionBar">
        <!-- The resource id of the menu to be used as the contents of the change sort menu. -->
        <attr name="changeSortMenuResId" format="reference" />
        <!-- The resource id of the menu to be used as the contents of the options menu. -->
        <attr name="optionsMenuResId" format="reference" />
    </declare-styleable>

    <declare-styleable name="GradientActionBar">
        <!-- The width of the bottom border. -->
        <attr name="bottomBorderWidth" format="dimension" />
    </declare-styleable>

    <!-- Due to the project's target API level of 21's inability to inflate custom
         drawables from XML, these attributes are never used, but are provided in
         case the target API level is ever increased to 24 or above. -->
    <declare-styleable name="GradientVectorDrawable">
        <!-- The string containing the path data to use for the drawable. -->
        <attr name="pathData" format="string" />
    </declare-styleable>

    <declare-styleable name="OutlinedGradientButton">
        <!-- The path data to use for the vector background. -->
        <attr name="backgroundPathData" format="string" />
        <!-- The path data to use for the vector outline. -->
        <attr name="outlinePathData"    format="string" />
        <!-- The stroke width of the outline. -->
        <attr name="outlineStrokeWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DisableableOutlinedGradientButton">
        <!-- The tint that will be used for the disabled overlay background. -->
        <attr name="disabledBackgroundTint" format="color" />
        <!-- The tint that will be used for the disabled overlay outline and text. -->
        <attr name="disabledOutlineAndTextTint" format="color" />
    </declare-styleable>

    <declare-styleable name="ToggleableTintedCheckbox">
        <attr name="state_edit_color" format="boolean" />
    </declare-styleable>

    <declare-styleable name="FragmentContainer">
        <!-- The resource id of the linked BottomNavigationView -->
        <attr name="navBarResId" format="reference" />
        <!-- The resource id of the string array that gives the name of the fragment (including the
             package name) that should be associated with each corresponding navigation bar menu item. -->
        <attr name="navBarMenuFragmentMapResId" format="reference" />
        <!-- The resource id of the animator that will be used for the entering fragment during a transaction involving a secondary fragment. -->
        <attr name="secondaryFragmentDefaultEnterAnimResId" format="reference" />
        <!-- The resource id of the animator that will be used for the exiting fragment during a transaction involving a secondary fragment. -->
        <attr name="secondaryFragmentDefaultExitAnimResId" format="reference" />
    </declare-styleable>

</resources>
