<resources>
    <style name="ShareDialogTitle" parent="TitleTextAppearance">
        <item name="android:text">@string/share_dialog_title</item>
    </style>

    <style name="ShareOptionButton" parent="NormalTextAppearance">
        <item name="android:background">@drawable/abc_btn_borderless_material</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- For some reason drawableStart does not work, so drawableLeft is used instead -->
    <style name="ShareViaTextMessageButton" parent="ShareOptionButton">
        <item name="android:drawableLeft">@drawable/ic_outline_message_24</item>
        <item name="android:text">@string/share_text_message_option</item>
    </style>

    <style name="ShareViaEmailButton" parent="ShareOptionButton">
        <item name="android:drawableLeft">@drawable/ic_baseline_mail_outline_24</item>
        <item name="android:text">@string/share_email_option</item>
    </style>
</resources>