<resources>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>
        <item name="recyclerViewItemColor">@color/colorRecyclerViewItemLight</item>
        <item name="popupMenuBackground">@color/colorWindowBackgroundLight</item>
        <item name="materialAlertDialogTheme">@style/LightAlertDialog</item>
        <item name="alertDialogTheme">@style/LightAlertDialog</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="android:textColorSecondary">@color/colorTextDarkSecondary</item>
        <item name="android:textColorHint">@color/colorTextDarkSecondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:textViewStyle">@style/TextAppearance</item>
        <item name="editTextStyle">?android:attr/textAppearance</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="snackbarTextViewStyle">?android:attr/textViewStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarActionTextAppearance</item>
        <item name="actionBarTitleStyle">@style/ActionBarTitle</item>
        <item name="android:textAppearance">@style/TextAppearance</item>

        <item name="colorAccent">@color/lightThemeBgGradientLeft</item>
        <item name="colorInBetweenPrimaryAccent">@color/lightThemeBgGradientMiddle</item>
        <item name="colorPrimary">@color/lightThemeBgGradientRight</item>
        <item name="foregroundGradientColorLeft">@color/colorWindowBackgroundLight</item>
        <item name="foregroundGradientColorMiddle">@color/colorWindowBackgroundLight</item>
        <item name="foregroundGradientColorRight">@color/colorWindowBackgroundLight</item>
        <item name="recyclerViewItemSelectionLeftGradientColor">?attr/colorAccent</item>
        <item name="recyclerViewItemSelectionMiddleGradientColor">?attr/colorInBetweenPrimaryAccent</item>
        <item name="recyclerViewItemSelectionRightGradientColor">?attr/colorPrimary</item>
    </style>

    <style name="DarkTheme" parent="LightTheme">
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>
        <item name="recyclerViewItemColor">@color/colorRecyclerViewItemDark</item>
        <item name="popupMenuBackground">@color/colorWindowBackgroundDark</item>
        <item name="materialAlertDialogTheme">@style/DarkAlertDialog</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="android:textColorSecondary">@color/colorTextLightSecondary</item>
        <item name="android:textColorHint">@color/colorTextLightSecondary</item>

        <item name="colorAccent">@color/darkThemeBgGradientLeft</item>
        <item name="colorInBetweenPrimaryAccent">@color/darkThemeBgGradientMiddle</item>
        <item name="colorPrimary">@color/darkThemeBgGradientRight</item>
        <item name="foregroundGradientColorLeft">@color/colorTextDark</item>
        <item name="foregroundGradientColorMiddle">@color/colorTextDark</item>
        <item name="foregroundGradientColorRight">@color/colorTextDark</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorPrimary">?android:textColorPrimary</item>
        <item name="android:textColorSecondary">?android:textColorSecondary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NormalTextAppearance" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryTextAppearance" parent="TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button">
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="LightAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>
        <item name="android:backgroundTint">@color/colorWindowBackgroundLight</item>
        <item name="android:windowTitleStyle">@style/TitleTextAppearance</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="textColorAlertDialogListItem">@color/colorTextDark</item>

    </style>

    <style name="DarkAlertDialog" parent="LightAlertDialog">
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>
        <item name="android:backgroundTint">@color/colorWindowBackgroundDark</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="textColorAlertDialogListItem">@color/colorTextLight</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/recyclerViewItemColor</item>
    </style>

    <style name="SnackbarActionTextAppearance" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AboutAppBody" parent="@style/SecondaryTextAppearance">
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:text">@string/about_app_body</item>
    </style>

    <style name="AddNewItemTitle" parent="@style/TitleTextAppearance">
        <item name="android:text">@string/add_item_button_name</item>
    </style>

    <style name="AddNewItemDialogMessage" parent="@style/SecondaryTextAppearance">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AddNewItemDialogDuplicateNameMessage" parent="@style/AddNewItemDialogMessage">
        <item name="android:text">@string/new_item_duplicate_name_warning</item>
        <item name="android:drawableStart">@drawable/ic_round_warning_24</item>
    </style>

    <style name="AddNewItemDialogNameRequiredMessage" parent="@style/AddNewItemDialogMessage">
        <item name="android:text">Item must have a name</item>
        <item name="android:drawableStart">@drawable/ic_baseline_error_24</item>
    </style>

</resources>