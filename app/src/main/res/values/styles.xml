<resources>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorPrimaryRowLight</item>
        <item name="recyclerViewItemColor">@color/colorCardBackground</item>
        <item name="colorSelected">@android:color/holo_blue_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="imageButtonStyle">@style/LightThemeImageButton</item>
        <item name="android:textViewStyle">@style/LightThemeTextAppearance</item>
        <item name="editTextStyle">@style/LightThemeEditTextStyle</item>
        <item name="checkboxStyle">@style/LightThemeCheckBoxStyle</item>
        <item name="popupMenuBackground">@color/colorPrimaryRowLight</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="android:alertDialogTheme">@style/LightThemeAlertDialog</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="actionBarTheme">@style/ActionBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:textColorPrimary">@color/colorTextDark</item>
        <item name="snackbarStyle">@style/LightThemeSnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/LightThemeTextAppearance</item>
        <item name="snackbarButtonStyle">@style/SnackbarActionTextAppearance</item>
    </style>

    <style name="DarkTheme" parent="LightTheme">
        <item name="android:colorBackground">@color/colorPrimaryRowDark</item>
        <item name="recyclerViewItemColor">@color/colorAlternateRowDark</item>
        <item name="colorSelected">@android:color/holo_blue_dark</item>
        <item name="imageButtonStyle">@style/DarkThemeImageButton</item>
        <item name="android:textViewStyle">@style/DarkThemeTextAppearance</item>
        <item name="editTextStyle">@style/DarkThemeEditTextStyle</item>
        <item name="checkboxStyle">@style/DarkThemeCheckBoxStyle</item>
        <item name="popupMenuBackground">@color/colorPrimaryRowDark</item>
        <item name="android:alertDialogTheme">@style/DarkThemeAlertDialog</item>
        <item name="android:editTextColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/colorTextLight</item>
        <item name="snackbarStyle">@style/DarkThemeSnackbarStyle</item>
        <item name="snackbarTextViewStyle">@style/DarkThemeTextAppearance</item>
    </style>

    <style name="SnackbarActionTextAppearance" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorTextLink</item>
    </style>

    <style name="LightThemeSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorButtonLight</item>
    </style>

    <style name="DarkThemeSnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorButtonDark</item>
    </style>

    <style name="ActionBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/black</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>

    </style>

    <style name="LightThemeTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextDark</item>
    </style>

    <style name="DarkThemeTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextLight</item>
    </style>

    <style name="LightThemeEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textColorHint">@color/colorTextDarkSecondary</item>
    </style>

    <style name="DarkThemeEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textColorHint">@color/colorTextLightSecondary</item>
    </style>

    <style name="LightThemeCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="DarkThemeCheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="LightThemeImageButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorTextDark</item>
        <item name="tint">@color/colorTextDark</item>
    </style>

    <style name="DarkThemeImageButton" parent="LightThemeImageButton">
        <item name="backgroundTint">@color/colorTextLight</item>
        <item name="tint">@color/colorTextLight</item>
    </style>

    <style name="LightThemeAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimaryRowLight</item>
    </style>

    <style name="DarkThemeAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimaryRowDark</item>
    </style>

    <style name="RecyclerViewItemStyle">
        <item name="android:background">@drawable/recycler_view_item_background</item>
        <item name="android:backgroundTint">?attr/recyclerViewItemColor</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

</resources>