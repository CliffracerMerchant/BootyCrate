<resources>
    <style name="LightTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>
        <item name="recyclerViewItemColor">@color/colorRecyclerViewItemLight</item>
        <item name="popupMenuBackground">@color/colorWindowBackgroundLight</item>
        <item name="materialAlertDialogTheme">@style/LightAlertDialog</item>
        <item name="alertDialogTheme">@style/LightAlertDialog</item>
        <item name="colorSurface">@color/colorWindowBackgroundLight</item>
        <item name="colorOnPrimary">@color/colorWindowBackgroundDark</item>
        <item name="colorOnSurface">@color/colorWindowBackgroundDark</item>
        <item name="snackbarStyle">@style/SnackbarStyle</item>
        <item name="android:textColorPrimary">@color/color_text_dark</item>
        <item name="android:textColorSecondary">@color/color_text_dark_secondary</item>
        <item name="android:textColorHint">@color/color_text_dark_secondary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="checkoutButtonDisabledAlpha">145</item>

        <item name="imageButtonStyle">@style/ImageButton</item>
        <item name="android:textViewStyle">@style/TextAppearance</item>
        <item name="editTextStyle">?android:attr/textAppearance</item>
        <item name="checkboxStyle">@style/CheckBox</item>
        <item name="snackbarTextViewStyle">?android:attr/textViewStyle</item>
        <item name="snackbarButtonStyle">@style/SnackbarActionTextAppearance</item>
        <item name="actionBarTitleStyle">@style/ActionBarTitle</item>
        <item name="android:textAppearance">@style/TextAppearance</item>

        <item name="colorPrimary">@color/lightThemeBgGradientLeft</item>
        <item name="colorAccent">@color/lightThemeBgGradientLeft</item>
        <item name="backgroundGradientColorLeft">@color/lightThemeBgGradientLeft</item>
        <item name="backgroundGradientColorMiddle">@color/lightThemeBgGradientMiddle</item>
        <item name="backgroundGradientColorRight">@color/lightThemeBgGradientRight</item>
        <item name="foregroundGradientColorLeft">@color/colorRecyclerViewItemLight</item>
        <item name="foregroundGradientColorMiddle">@color/colorRecyclerViewItemLight</item>
        <item name="foregroundGradientColorRight">@color/colorRecyclerViewItemLight</item>
        <item name="recyclerViewItemSelectionLeftGradientColor">@color/lightThemeBgGradientLeft</item>
        <item name="recyclerViewItemSelectionMiddleGradientColor">@color/lightThemeBgGradientMiddle</item>
        <item name="recyclerViewItemSelectionRightGradientColor">@color/lightThemeBgGradientRight</item>
    </style>

    <style name="DarkTheme" parent="LightTheme">
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>
        <item name="recyclerViewItemColor">@color/colorRecyclerViewItemDark</item>
        <item name="popupMenuBackground">@color/colorWindowBackgroundDark</item>
        <item name="materialAlertDialogTheme">@style/DarkAlertDialog</item>
        <item name="alertDialogTheme">@style/DarkAlertDialog</item>
        <item name="android:textColorPrimary">@color/color_text_light</item>
        <item name="android:textColorSecondary">@color/color_text_light_secondary</item>
        <item name="android:textColorHint">@color/color_text_light_secondary</item>
        <item name="colorSurface">@color/colorWindowBackgroundDark</item>
        <item name="colorOnPrimary">@color/colorWindowBackgroundLight</item>
        <item name="colorOnSurface">@color/colorWindowBackgroundLight</item>
        <item name="checkoutButtonDisabledAlpha">110</item>

        <item name="colorPrimary">@color/darkThemeBgGradientLeft</item>
        <item name="colorAccent">@color/darkThemeBgGradientLeft</item>
        <item name="backgroundGradientColorLeft">@color/darkThemeBgGradientLeft</item>
        <item name="backgroundGradientColorMiddle">@color/darkThemeBgGradientMiddle</item>
        <item name="backgroundGradientColorRight">@color/darkThemeBgGradientRight</item>
        <item name="foregroundGradientColorLeft">@color/colorRecyclerViewItemDark</item>
        <item name="foregroundGradientColorMiddle">@color/colorRecyclerViewItemDark</item>
        <item name="foregroundGradientColorRight">@color/colorRecyclerViewItemDark</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorPrimary">?android:textColorPrimary</item>
        <item name="android:textColorSecondary">?android:textColorSecondary</item>
        <item name="android:textColorHint">?android:attr/textColorHint</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NormalTextAppearance" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryTextAppearance" parent="TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button">
        <item name="tint">?android:attr/textColorPrimary</item>
    </style>

    <style name="LightAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>
        <item name="android:backgroundTint">@color/colorWindowBackgroundLight</item>
        <item name="android:windowTitleStyle">@style/TitleTextAppearance</item>
        <item name="android:textColor">@color/color_text_dark</item>
        <item name="textColorAlertDialogListItem">@color/color_text_dark</item>

    </style>

    <style name="DarkAlertDialog" parent="LightAlertDialog">
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>
        <item name="android:backgroundTint">@color/colorWindowBackgroundDark</item>
        <item name="android:textColor">@color/color_text_light</item>
        <item name="textColorAlertDialogListItem">@color/color_text_light</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="backgroundTint">?attr/recyclerViewItemColor</item>
    </style>

    <style name="SnackbarActionTextAppearance" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="AboutAppBody" parent="@style/NormalTextAppearance">
        <item name="android:autoLink">web</item>
        <item name="android:linksClickable">true</item>
        <item name="android:text">@string/about_app_body</item>
    </style>

    <style name="AddNewItemTitle" parent="@style/TitleTextAppearance">
        <item name="android:text">@string/add_item_button_name</item>
    </style>

    <style name="AddNewItemDialogMessage" parent="@style/SecondaryTextAppearance">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="UpdateListReminderEnableCheckBox" parent="@style/NormalTextAppearance">
        <item name="android:text">@string/update_list_reminder_description</item>
    </style>

    <style name="UpdateListReminderTimeView" parent="@style/NormalTextAppearance">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="UpdateListReminderRepeatCheckBox" parent="@style/NormalTextAppearance">
        <item name="android:text">@string/repeat_description</item>
        <item name="android:textColorSecondary">?attr/colorAccent</item>
        <item name="android:labelFor">@id/reminderRepeatCheckBox</item>
    </style>

    <style name="AccentedTextAppearance" parent="NormalTextAppearance">
        <item name="android:textColor">@color/disableable_accent_tint</item>
    </style>

    <style name="MaterialDayPickerToggle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/day_button_size</item>
        <item name="android:layout_height">@dimen/day_button_size</item>
        <item name="android:background">@drawable/circle_toggle_button</item>
        <item name="android:textSize">@dimen/day_button_max_font_size</item>
        <item name="android:textColor">@color/circle_toggle_button_text_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>