<resources>
    <style name="ListItemColorEdit">
        <item name="android:padding">13dp</item>
        <item name="colorsResId">@array/list_item_colors</item>
        <item name="colorDescriptionsResId">@array/list_item_color_descriptions</item>
    </style>

    <style name="ListItemNameEdit" parent="@style/NormalTextAppearance">
        <item name="android:hint">@string/name_description</item>
        <item name="android:ellipsize">end</item>
        <item name="isEditable">false</item>
        <item name="canBeBlank">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemExtraInfoEdit" parent="@style/SecondaryTextAppearance">
        <item name="android:hint">@string/extra_info_description</item>
        <item name="android:textColor">@color/color_text_light_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="isEditable">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListItemAmountEdit" parent="@style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="minValue">1</item>
    </style>

    <style name="ListItemEditButton">
        <item name="android:src">@drawable/edit_and_collapse_button</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ShoppingListItemLinkIndicator" parent="@style/SecondaryTextAppearance">
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_baseline_link_24</item>
    </style>

    <style name="InventoryItemColorEdit" parent="@style/ListItemColorEdit">
        <item name="android:src">@drawable/animated_circle_to_checkbox_checked_background</item>
    </style>

    <style name="InventoryItemAutoAddToShoppingListCheckboxLabel" parent="@style/SecondaryTextAppearance">
        <item name="android:importantForAccessibility">no</item>
        <item name="android:text">@string/auto_add_to_shopping_list_checkbox_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InventoryItemAutoAddToShoppingListTriggerEdit" parent="@style/ListItemAmountEdit">
        <item name="valueIsFocusable">true</item>
    </style>

    <style name="InventoryNameTextView" parent="@style/NormalTextAppearance">
        <item name="android:singleLine">true</item>
    </style>

    <style name="InventoryMoreOptionsButton">
        <item name="srcCompat">@drawable/ic_more_vert_black_24dp</item>
        <item name="android:tint">?android:attr/textColorPrimary</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>