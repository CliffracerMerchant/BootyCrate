<resources>
    <style name="BootyCrateItemColorEdit">
        <item name="android:padding">12dp</item>
        <item name="colorsResId">@array/bootycrate_item_colors</item>
    </style>

    <style name="BootyCrateItemNameEdit" parent="@style/NormalTextAppearance">
        <item name="android:hint">@string/item_name_description</item>
        <item name="android:ellipsize">end</item>
        <item name="isEditable">false</item>
        <item name="canBeBlank">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BootyCrateItemExtraInfoEdit" parent="@style/SecondaryTextAppearance">
        <item name="android:hint">@string/item_extra_info_description</item>
        <item name="android:textColor">@color/color_text_light_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="isEditable">false</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BootyCrateItemAmountEdit" parent="@style/TextAppearance">
        <item name="android:textSize">22sp</item>
        <item name="minValue">1</item>
    </style>

    <style name="BootyCrateItemEditButton">
        <item name="android:src">@drawable/edit_and_collapse_button</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ShoppingListItemLinkIndicator" parent="@style/SecondaryTextAppearance">
        <item name="android:padding">12dp</item>
        <item name="android:src">@drawable/ic_baseline_link_24</item>
    </style>

    <style name="InventoryItemColorEdit" parent="@style/BootyCrateItemColorEdit">
        <item name="android:src">@drawable/animated_circle_to_checkbox_checked_background</item>
    </style>

    <style name="InventoryItemAddToShoppingListCheckboxLabel" parent="@style/SecondaryTextAppearance">
        <item name="android:labelFor">@id/autoAddToShoppingListCheckBox</item>
        <item name="android:text">@string/add_to_shopping_list_checkbox_text</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InventoryItemAddToShoppingListTriggerEdit" parent="@style/BootyCrateItemAmountEdit">
        <item name="valueIsFocusable">true</item>
    </style>

</resources>