<set xmlns:android="http://schemas.android.com/apk/res/android">
    <objectAnimator android:duration="@integer/fragmentTransitionDuration"
        android:propertyName="translationXFraction"
        android:valueFrom="0"
        android:valueTo="-0.5"
        android:interpolator="@anim/default_interpolator"/>

    <objectAnimator android:duration="@integer/fragmentTransitionDuration"
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:interpolator="@anim/fade_out_interpolator"/>
</set>