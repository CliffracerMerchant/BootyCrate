<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true"
        android:id="@+id/decrease_button_activated"
        android:drawable="@drawable/animated_multiply_to_minus_icon" />
    <item android:id ="@+id/decrease_button_not_activated"
        android:drawable="@drawable/animated_minus_to_multiply_icon" />

    <transition
        android:fromId="@id/decrease_button_activated"
        android:toId="@id/decrease_button_not_activated"
        android:drawable="@drawable/animated_multiply_to_minus_icon" />
    <transition
        android:fromId="@id/decrease_button_not_activated"
        android:toId="@id/decrease_button_activated"
        android:drawable="@drawable/animated_minus_to_multiply_icon" />
</animated-selector>