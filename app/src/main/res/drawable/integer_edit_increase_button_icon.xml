<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true"
        android:id="@+id/increase_button_activated"
        android:drawable="@drawable/animated_blank_to_plus_icon" />
    <item android:id ="@+id/increase_button_not_activated"
        android:drawable="@drawable/animated_plus_to_blank_icon" />

    <transition
        android:fromId="@id/increase_button_activated"
        android:toId="@id/increase_button_not_activated"
        android:drawable="@drawable/animated_blank_to_plus_icon" />
    <transition
        android:fromId="@id/increase_button_not_activated"
        android:toId="@id/increase_button_activated"
        android:drawable="@drawable/animated_plus_to_blank_icon" />
</animated-selector>