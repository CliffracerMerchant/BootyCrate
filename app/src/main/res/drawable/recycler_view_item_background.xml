<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt" >

    <item android:id="@+id/recycler_view_item_background">
        <aapt:attr name="android:drawable">
            <shape android:shape="rectangle">
                <solid android:color="?attr/recyclerViewItemColor" />
                <corners android:radius="@dimen/recycler_view_item_rounded_corner_radius" />
            </shape>
        </aapt:attr>
    </item>

    <item android:id="@+id/recycler_view_item_selected_background"
        android:drawable="@drawable/recycler_view_item_background_selected"/>

</layer-list>

