<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="LinearLayout"
    tools:background="@drawable/list_item">

    <TextView
        android:id="@+id/nameView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:layout_weight="1"
        tools:text="Inventory name"
        style="@style/ItemGroupNameTextView" />

    <TextView
        android:id="@+id/shoppingListItemCountView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        app:drawableTint="?android:attr/textColorPrimary"
        tools:drawableStart="@drawable/shopping_cart_icon"
        tools:text="4"
        style="@style/SecondaryTextAppearance"/>

    <TextView
        android:id="@+id/inventoryItemCountView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:gravity="center"
        app:drawableTint="?android:attr/textColorPrimary"
        tools:drawableStart="@drawable/inventory_icon"
        tools:text="5"
        style="@style/SecondaryTextAppearance" />

    <ImageView
        android:id="@+id/optionsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@string/more_options_description"
        style="@style/ItemGroupMoreOptionsButton" />

</merge>