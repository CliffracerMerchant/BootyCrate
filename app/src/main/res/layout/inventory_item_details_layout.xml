<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout" >

    <androidx.constraintlayout.widget.Group
        android:id="@+id/inventoryItemDetailsGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:constraint_referenced_ids="divider, addToShoppingListCheckBox, addToShoppingListTriggerEdit, collapseButton" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/colorEdit"
        app:layout_constraintBottom_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/addToShoppingListCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:minLines="2"
        android:text="@string/add_to_shopping_list_checkbox_text"
        app:layout_constraintEnd_toStartOf="@id/addToShoppingListTriggerEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginStart="2dp"

        android:textSize="14sp" />

    <com.cliffracermerchant.bootycrate.IntegerEdit
        android:id="@+id/addToShoppingListTriggerEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/addToShoppingListCheckBox"
        app:layout_constraintTop_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/addToShoppingListCheckBox"
        android:contentDescription="@string/add_to_shopping_list_trigger_edit_description"
        app:textSize="22sp"
        app:minValue="1" />

    <ImageButton
        android:id="@+id/collapseButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="8dp"
        android:src="@drawable/ic_expand_less_black_24dp"
        app:layout_constraintTop_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/addToShoppingListCheckBox"
        app:layout_constraintStart_toStartOf="@id/editButton"
        app:layout_constraintEnd_toEndOf="@id/editButton"
        android:contentDescription="@string/collapse_button_description" />

</merge>