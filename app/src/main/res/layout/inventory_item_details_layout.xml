<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inventoryItemDetailsLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|fill"
    app:chainUseRtl="false"
    app:layout_constraintHorizontal_chainStyle="spread">

    <CheckBox
        android:id="@+id/autoAddToShoppingListCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="@string/auto_add_to_shopping_list_checkbox_text"
        app:layout_constraintEnd_toStartOf="@id/autoAddToShoppingListTriggerEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.cliffracermerchant.stuffcrate.IntegerEdit
        android:id="@+id/autoAddToShoppingListTriggerEdit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@id/autoAddToShoppingListCheckBox"
        app:layout_constraintStart_toEndOf="@id/autoAddToShoppingListCheckBox"
        app:layout_constraintTop_toTopOf="@id/autoAddToShoppingListCheckBox"
        app:textSize="16" />

    <ImageButton
        android:id="@+id/collapseDetailsButton"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginEnd="10dp"
        android:background="@android:drawable/arrow_up_float"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintBottom_toBottomOf="@id/autoAddToShoppingListCheckBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintTop_toTopOf="@id/autoAddToShoppingListCheckBox"
        android:contentDescription="@string/collapse_details_description" />

</androidx.constraintlayout.widget.ConstraintLayout>