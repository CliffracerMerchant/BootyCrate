<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.cliffracertech.bootycrate.view.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        style="?attr/bottomAppBarStyle" >

    <!-- BottomNavigationViewEx is used instead of the default Android Bottom-
         NavigationView because it makes it easier to access the views used to
         represent menu items (which is needed for some of the gradient styling). -->
        <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/background_gradient"
            style="?attr/bottomNavigationViewStyle" />

    </com.cliffracertech.bootycrate.view.BottomAppBar>

    <TextView
        android:id="@+id/appTitle"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/settingsButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        style="?attr/bottomNavDrawerAppTitleStyle"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/settingsButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toEndOf="@id/appTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        style="@style/SettingsButton"/>

    <FrameLayout
        android:id="@+id/bottomNavDrawerContentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:background="@drawable/background_gradient" >

        <View
            android:id="@+id/inventory_selector"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/alert_dialog_background" />

    </FrameLayout>

</merge>