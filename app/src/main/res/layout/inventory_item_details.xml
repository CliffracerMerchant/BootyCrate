<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout" >

    <androidx.constraintlayout.widget.Group
        android:id="@+id/inventoryItemDetailsGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible"
        app:constraint_referenced_ids="divider, addToShoppingListCheckBox, addToShoppingListTriggerEdit, collapseButton" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/spacer"
        app:layout_constraintBottom_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/ExpandableSelectableItemDivider" />

    <CheckBox
        android:id="@+id/addToShoppingListCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        app:layout_constraintEnd_toStartOf="@id/addToShoppingListTriggerEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:layout_marginStart="2dp"
        style="@style/InventoryItemAddToShoppingListCheckbox"/>

    <com.cliffracermerchant.bootycrate.IntegerEdit
        android:id="@+id/addToShoppingListTriggerEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/addToShoppingListCheckBox"
        app:layout_constraintTop_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/addToShoppingListCheckBox"
        style="@style/InventoryItemAddToShoppingListTriggerEdit" />

    <ImageButton
        android:id="@+id/collapseButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="@id/addToShoppingListCheckBox"
        app:layout_constraintBottom_toBottomOf="@id/addToShoppingListCheckBox"
        app:layout_constraintStart_toStartOf="@id/editButton"
        app:layout_constraintEnd_toEndOf="@id/editButton"
        android:contentDescription="@string/collapse_button_description"
        style="@style/ExpandableSelectableItemCollapseButton"/>
</merge>