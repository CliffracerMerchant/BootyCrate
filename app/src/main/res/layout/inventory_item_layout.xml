<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inventoryItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|fill"
    android:animateLayoutChanges="false"
    app:layout_constraintHorizontal_chainStyle="spread">

    <com.cliffracermerchant.bootycrate.TextFieldEdit
        android:id="@+id/nameEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:importantForAutofill="no"
        android:textSize="26sp"
        app:editableHint="@string/inventory_item_name_description"
        app:layout_constraintBottom_toTopOf="@id/extraInfoEdit"
        app:layout_constraintEnd_toStartOf="@id/amountEdit"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/inventory_item_name_description"
        tools:ignore="labelFor"/>

    <com.cliffracermerchant.bootycrate.IntegerEdit
        android:id="@+id/amountEdit"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@id/extraInfoEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/nameEdit"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/inventory_item_amount_description"
        app:textSize="26" />

    <com.cliffracermerchant.bootycrate.TextFieldEdit
        android:id="@+id/extraInfoEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:importantForAutofill="no"
        app:editableHint="@string/inventory_item_extra_info_description"
        app:layout_constraintEnd_toStartOf="@id/expandDetailsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEdit"
        android:contentDescription="@string/inventory_item_extra_info_description"
        tools:ignore="LabelFor" />

    <ImageButton
        android:id="@+id/expandDetailsButton"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/arrow_down_float"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintStart_toEndOf="@id/extraInfoEdit"
        app:layout_constraintTop_toTopOf="@id/extraInfoEdit"
        android:contentDescription="@string/expand_details_description" />

    <include
        android:id="@+id/inventoryItemDetailsInclude"
        layout="@layout/inventory_item_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/extraInfoEdit" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/inventoryItemDetailsInclude"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>