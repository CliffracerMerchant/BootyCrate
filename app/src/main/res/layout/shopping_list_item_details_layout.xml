<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/linkedToIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/linkedToEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextLink"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/linkedToIndicator"
        app:layout_constraintBottom_toBottomOf="@id/linkedToIndicator"
        app:layout_constraintStart_toEndOf="@id/linkedToIndicator" />

    <ImageButton
        android:id="@+id/collapseButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_expand_less_black_24dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="2dp"
        android:contentDescription="@string/collapse_button_description"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linkedToIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>