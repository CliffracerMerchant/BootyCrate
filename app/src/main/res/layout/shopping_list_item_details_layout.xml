<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/shoppingListItemDetailsGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:constraint_referenced_ids="divider, linkedToIndicator, linkedToEdit, collapseButton" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="?android:attr/textColorPrimary"
        app:layout_constraintTop_toBottomOf="@id/spacer"
        app:layout_constraintBottom_toTopOf="@id/linkedToIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/linkedToIndicator"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="@id/nameEdit" />

    <TextView
        android:id="@+id/linkedToEdit"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextLink"
        android:textSize="14sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/linkedToIndicator"
        app:layout_constraintBottom_toBottomOf="@id/linkedToIndicator"
        app:layout_constraintStart_toEndOf="@id/linkedToIndicator" />

    <ImageButton
        android:id="@+id/collapseButton"
        android:layout_width="42dp"
        android:layout_height="44dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp"
        android:paddingHorizontal="8dp"
        android:src="@drawable/ic_expand_less_black_24dp"
        app:layout_constraintTop_toTopOf="@id/linkedToIndicator"
        app:layout_constraintBottom_toBottomOf="@id/linkedToIndicator"
        app:layout_constraintStart_toStartOf="@id/editButton"
        app:layout_constraintEnd_toEndOf="@id/editButton"
        android:contentDescription="@string/collapse_button_description"/>

</merge>